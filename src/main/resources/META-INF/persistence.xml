<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd"
    version="2.0">
    <persistence-unit name="pakProduktePersistence" transaction-type="JTA">
        <!--
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		-->
        <jta-data-source>java:jboss/datasources/ProduktDB</jta-data-source>

     	<class>at.rsg.drb.e2e.pak.services.entity.Onlineprodukt</class>
        <class>at.rsg.drb.e2e.pak.services.entity.Produktgruppe</class>
        <class>at.rsg.drb.e2e.pak.services.entity.Produktkategorie</class>
        <validation-mode>AUTO</validation-mode>
 
        <properties>
            <!-- Property wird benÃ¶tigt, damit der Persistence-Provider aus der Applikation verwendet wird. -->
            <!--
            <property name="jboss.as.jpa.providerModule" value="application" />          
            <property name="hibernate.ejb.entitymanager_factory_name" value="java:app/env/emf" />
            -->
            <!-- Der Standardwert after_statement macht in einem transaktionalem Service keinen Sinn! -->
            <property name="hibernate.connection.release_mode" value="after_transaction" />


            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        	<property name="javax.persistence.schema-generation.create-source" value="metadata"/>
          	<property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
          	<property name="javax.persistence.sql-load-script-source" value="META-INF/sql/init_produkte.sql"/>
          	
          	<property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
			
            <property name="wildfly.jpa.default-unit" value="false" />
        </properties>
    </persistence-unit>
    
    
    <persistence-unit name="pakPersistence" transaction-type="JTA">
        <!--
		<provider>org.hibernate.ejb.HibernatePersistence</provider>
		-->
        <jta-data-source>java:jboss/datasources/PakDB</jta-data-source>

     	<class>at.rsg.drb.e2e.pak.services.entity.Land</class>
        <class>at.rsg.drb.e2e.pak.services.entity.TelefonnummerVorwahl</class>
        <validation-mode>AUTO</validation-mode>
 
        <properties>
            <property name="hibernate.connection.release_mode" value="after_transaction" />

            <property name="javax.persistence.schema-generation.database.action" value="drop-and-create"/>
        	<property name="javax.persistence.schema-generation.create-source" value="metadata"/>
          	<property name="javax.persistence.schema-generation.drop-source" value="metadata"/>
          	<property name="javax.persistence.sql-load-script-source" value="META-INF/sql/init_pak.sql"/>
          
          	 <property name="hibernate.show_sql" value="true"/>
			<property name="hibernate.format_sql" value="true"/>
            <property name="wildfly.jpa.default-unit" value="false" />
        </properties>
    </persistence-unit>
    
</persistence>